{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "removeComments": true,
      "baseUrl": "."
    },
    "files": ["./hardhat.config.ts"],
    "include": ["./scripts", "./test"],
    "exclude": [
      "node_modules"
    ]
  }